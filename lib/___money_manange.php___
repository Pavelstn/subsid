function calk_month($start_date, $stop_date)
            {
              //2005-06-01
              //2005-11-30

              $full_year= get_year($stop_date)- get_year($start_date);
              $full_month= get_month($start_date)- get_month($stop_date)+1;
              //echo $full_month;
              $time[0]= $full_year;
              $time[1]= $full_month;
              return $time;
            }


