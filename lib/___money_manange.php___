function merge_rub_and_kop($rub, $kop)
	{
	  $only_kop= $kop % 100;
	  $add_rub_= $kop- $only_kop;
	  $add_rub= $add_rub_/100;
	  $rub= $rub+ $add_rub;
	  $only_kop= $only_kop/100;
	  $deng= $rub+$only_kop;
	  return $deng;
	}

